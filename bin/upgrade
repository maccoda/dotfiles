#!/bin/bash
set -x
case "$(uname -s)" in

   Darwin)
     brew cask upgrade
    ;;

   Linux)
        sudo apt-get update -q
        sudo apt-get upgrade -qy
        sudo apt-get autoremove -qy
    ;;

   *)
     echo 'Unknown OS'
     exit 1
     ;;
esac


brew upgrade
brew cleanup

fish -c "omf update"

rustup update

cd $HOME/.local/share/omf/themes/batman
git stash; git pull -r; git stash pop


cd $HOME/.dotfiles
git stash; git pull -r; git stash pop

nvim +PlugUpdate +qall
