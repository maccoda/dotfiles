#!/bin/bash
set -x
case "$(uname -s)" in

   Darwin)
     brew cask upgrade; brew upgrade; brew cleanup
    ;;

   Linux)
        sudo apt-get update
        sudo apt-get upgrade -y
        sudo apt-get autoremove -y
    ;;

   *)
     echo 'Other OS'
     ;;
esac

fish -c "omf update"

rustup update

cd $HOME/.local/share/omf/themes/batman
git pull

cd $HOME/.dotfiles
git pull

nvim +PlugUpdate +qall
